<table class="xsmall light dimmed">
    {% if results.length === 0 %}
        <tr>
            <td>{{ 'NO_MATCHES_FOUND' | translate }}</td>
        </tr>
    {% else %}
        <tr>
            <td>
                {% for match in results %}
                    {% set scoreboard = scorebots[match.id] %}
                    <table class="match">
                        <tr>
                            {% if config.showLogos %}
                                <td>&nbsp;</td>
                            {% endif %}
                            {% if match.stars > 0 %}
                                <td class="stars">{{ 'â˜…'.repeat(match.stars) }}</td>
                            {% endif %}
                        </tr>
                        <tr>
                            {% if config.showLogos %}
                                <td>&nbsp;</td>
                            {% endif %}
                            <td>{{ match.event.name }}</td>
                        </tr>
                        {% for team in [match.team1, match.team2] %}
                            <tr>
                                {% if config.showLogos %}
                                    <td class="logo">
                                        <img class="logo__img" src="{{team.logo}}" />
                                    </td>
                                {% endif %}
                                <td class="small bold bright">{{ team.name }}</td>
                                    <td class="score small bold bright">
                                        {% if team.name === match.team1.name %}
                                            {{team.result}}
                                        {% elif team.name === match.team2.name  %}
                                            {{team.result}}
                                        {% else %}
                                            &ndash;
                                        {% endif %}
                                    </td>
                            </tr>
                        {% endfor %}
                    </table>
                {% endfor %}
            </td>
        </tr>
    {% endif %}
</table>
